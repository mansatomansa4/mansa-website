# Production Environment Configuration
# Copy this file to .env.production and update with production values

# ==============================================
# PRODUCTION API
# ==============================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ==============================================
# PRODUCTION MONITORING
# ==============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxx@sentry.io/xxxxxxx
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# ==============================================
# PRODUCTION FEATURES
# ==============================================
NEXT_PUBLIC_ENABLE_MENTORSHIP=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ==============================================
# PRODUCTION SERVICES
# ==============================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-preset

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_DISABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SOURCE_MAPS=false
